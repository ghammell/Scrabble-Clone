var start_coordinate = <%= @start_coordinate.id %>
$('#game_container').empty()
$('#game_container').append("<%= escape_javascript(render @game) %>")
$('.game').fadeIn( function(){
  $('#p1_hand').slideDown( function(){
    $('#p2_hand').slideDown()
  })
})
$('.game').css('display', 'table')

$('#p1_hand .letter').addClass('draggable')
$('#p1_hand .word_buttons').fadeIn()
BindDraggable('.draggable')
BindDroppable('.coordinate')
$('.coordinate').droppable('disable')
$('#coordinate_' + start_coordinate).droppable('enable')

$('.multiple_info').parent().css("background-color", "white")

var gameId = $('.game').attr('id').split("_")[1]
