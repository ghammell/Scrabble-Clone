var player = <%= @player %>
var nextPlayer = function() {
  if (player === 1) {
    return 2
  } else {
    return 1
  }
}()

var hand = '#p' + player + '_hand'
var nextPlayerHand = '#p' + nextPlayer + '_hand'
var points = <%= @points %>

var add_letters = {
  letters: <%= @letters %>,
  add: function() {
    for (i=0; i < this.letters.length; i++){
      $(hand).children('ul').append(
        "<li><div class='letter'>" + alphabet[this.letters[i]] + "</div></li>"
      )
    }
  }
}

var add_points = {
  points: <%= @points %>,
  add: function() {
    currentScore = parseInt($(hand).children('.score').text())
    $(hand).children('.score').text(currentScore + this.points)
  }
}

var dropResetter = {
  ids: <%= @droppable_ids %>,
  reset: function() {
    $('.coordinate').droppable('disable')
    for (i=0; i < this.ids.length; i++) {
      coordinate_div = '#coordinate_' + this.ids[i]
      $(coordinate_div).droppable('enable')
    }
  }
}


add_points.add()
add_letters.add()

$(hand + ' .word_buttons').fadeOut()
$(nextPlayerHand + ' .word_buttons').fadeIn()


if (points >= 0) {
  $(hand + ' .letter').removeClass('draggable ui-draggable ui-draggable-handle')
  $(nextPlayerHand + ' .letter').addClass('draggable')
}

BindDraggable('.draggable')
dropResetter.reset()